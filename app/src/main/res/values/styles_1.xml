<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:background">@color/actionbarBackground</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/actionbarBackground</item>
        <item name="android:colorBackground">@color/actionbarBackground</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbarBackground</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:logo">@drawable/mylogo</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="mapsactivity_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_margin">@dimen/mapactivity_topbar_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="MyDialogTheme" parent="android:Holo.Light.ButtonBar.AlertDialog">
        <item name="android:divider">@color/cardTitle</item>
    </style>

</resources>
